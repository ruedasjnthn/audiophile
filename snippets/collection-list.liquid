<div class='container mt-24 flex flex-col justify-center gap-y-20 md:flex-row md:gap-x-2.5 lg:mt-44 lg:gap-x-[1.875rem] lg:gap-y-0'>
    {% for collection in collections %}
        <a
            href='{{ collection.url }}'
            class='group flex w-full flex-col items-center rounded-lg bg-[#F1F1F1] pb-[1.25rem] lg:pb-[1.875rem]'
        >
            <div class='-translate-y-1/2'>
                <img
                    src='{{ collection.featured_image |  image_url  }}'
                    alt=''
                    width=''
                    height=''
                >
            </div>
            <h1 class='-mt-4 text-[0.9375rem] font-bold uppercase md:-mt-2.5 lg:mt-0 lg:text-lg'>
                {{ collection.title }}
            </h1>
            <div class='mt-4 flex items-center gap-x-3'>
                <span class='text-[0.8125rem] font-bold uppercase text-black/50 group-hover:text-[#D87D4A]'>shop</span>
                {% render 'icon-arrow-right' %}
            </div>
        </a>
    {% endfor %}
</div>
